<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.hinodesoftworks.dailyrpg.AddQuestFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#e8e6d4"
        android:weightSum="1">

        <EditText
            android:id="@+id/quest_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quest Name"
            />

        <EditText
            android:id="@+id/quest_details_field"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_weight="0.18"
            android:hint="Quest Details"/>

        <EditText
            android:id="@+id/quest_exp_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Experience Value"
            />



        <Spinner
            android:id="@+id/quest_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/quest_date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Button"
            />

        <Button
            android:id="@+id/quest_time_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Button"
            />


    </LinearLayout>
</FrameLayout>
