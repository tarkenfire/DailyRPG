<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hinodesoftworks.dailyrpg.AddCharacterFragment"
    android:orientation="vertical"
    android:background="#e8e6d4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/create_char_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:src="@drawable/ic_launcher"
        android:clickable="true"/>

    <EditText
        android:id="@+id/create_char_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Character name"/>

    <Spinner
        android:id="@+id/create_class_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
